#!/bin/bash

# Loop through all HTML files in current directory
for file in *.html; do
    # Check if file exists and is a regular file
    if [ -f "$file" ]; then
        # Parent directory path for the same file
        parent_file="../$file"
        
        # Check if file doesn't exist in parent directory
        if [ ! -f "$parent_file" ]; then
            # Copy file to parent directory if it doesn't exist
            cp "$file" "../$file"
            echo "Copied new file: $file to parent directory"
        else
            # If file exists in parent, check if current file is newer
            if [ "$file" -nt "$parent_file" ]; then
                # Copy if current version is newer
                cp "$file" "../$file"
                echo "Updated: $file in parent directory"
            fi
        fi
    fi
done
